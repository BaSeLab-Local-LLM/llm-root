# ngrok -> Vercel rewrite sync settings
FRONTEND_DIR=/home/miruware/llm-root/submodules/frontend
VERCEL_JSON=/home/miruware/llm-root/submodules/frontend/vercel.json

# ngrok inspect API
NGROK_INSPECT_PORT=4040
NGROK_API=http://127.0.0.1:4040/api/tunnels
NGROK_CONTAINER_NAME=llm-ngrok

# Git options
GIT_BRANCH=main
GIT_REMOTE=origin
AUTO_PUSH=true

# Optional: non-interactive GitHub auth for AUTO_PUSH
# Use a Fine-grained PAT with repo contents read/write on llm-frontend repo.
GITHUB_USERNAME=
GITHUB_TOKEN=

# Optional: trigger Vercel Deploy Hook after sync
VERCEL_DEPLOY_HOOK_URL=

# Poll interval seconds
POLL_INTERVAL=20
